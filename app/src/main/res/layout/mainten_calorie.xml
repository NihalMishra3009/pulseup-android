<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#EBEBEB"
    tools:context=".yoga_wo_j">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topToolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="0dp"
        android:background="@color/tett"
        android:gravity="center"
        app:navigationIcon="@drawable/chevron_direction_left_white_icon"
        app:title="Find Maintenance calorie"
        app:titleTextAppearance="@style/Base.Theme.MartyApp"
        app:titleTextColor="@color/white" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topToolbar"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@color/white"
            android:orientation="vertical"
            >

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:text="Enter your age -"
        android:textSize="16sp"
        android:textStyle="bold"
        android:fontFamily="@font/lexend"
        android:textColor="@color/tett"
       />

    <EditText
        android:id="@+id/etAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_rec"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/tett"
        android:theme="@style/EditTextCursorColor2"
        android:fontFamily="@font/lexend"
        android:hint="Enter Age"
        android:inputType="number"
        android:textSize="16sp"
        android:textColorHint="#6B135374"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:text="Enter your weight -"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/lexend"
                android:textColor="@color/tett"
                />


            <EditText
        android:id="@+id/etWeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_rec"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/tett"
        android:fontFamily="@font/lexend"
        android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:theme="@style/EditTextCursorColor2"
        android:gravity="center"
        android:textSize="16sp"
        android:textColorHint="#6B135374"
        android:hint="Enter weight (kg)"
        android:inputType="numberDecimal"
        tools:ignore="TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content"
                android:text="Enter your height -"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/lexend"
                android:textColor="@color/tett"
                />

    <EditText
        android:id="@+id/etHeight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@drawable/round_rec"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:hint="Enter height (cm)"
        android:textColor="@color/tett"
        android:textColorHint="#6B135374"
        android:textSize="16sp"
        android:fontFamily="@font/lexend"
        android:layout_gravity="center"
        android:gravity="center"
        android:theme="@style/EditTextCursorColor2"
        android:inputType="numberDecimal"
        android:layout_marginTop="10dp"
        tools:ignore="TouchTargetSizeCheck" />

    <RadioGroup
        android:id="@+id/rgGender"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rbMale"
            android:layout_width="wrap_content"
            android:textColor="@color/tett"
            android:layout_marginLeft="20dp"
            android:buttonTint="@color/radio_button_tint"
            android:textSize="16sp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"
            android:text="Male" />

        <RadioButton
            android:id="@+id/rbFemale"
            android:layout_width="wrap_content"
            android:textColor="@color/tett"
            android:buttonTint="@color/radio_button_tint"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:text="Female" />
    </RadioGroup>

            <Spinner
                android:id="@+id/spActivityLevel"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_height="40dp"
                android:background="@drawable/spinner_item_background"
                android:entries="@array/activity_levels"
                android:textColor="@color/tett"
                style="@style/CustomSpinner"
                tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:textSize="16sp"
        android:backgroundTint="#CFF3FF"
        android:textColor="@color/tett"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Maintenance Calories is "
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"
        android:textColor="@color/tett"
        android:layout_marginTop="20dp"/>
</LinearLayout>
    </ScrollView>
</RelativeLayout>