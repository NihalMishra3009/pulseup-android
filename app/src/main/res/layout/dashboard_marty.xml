<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EBEBEB"
    tools:context=".dashboard">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#175F75"
        app:title="Pulse Up"
        app:titleTextColor="@color/white"
        app:titleTextAppearance="@style/Base.Theme.MartyApp"
        android:gravity="center">

        <ImageView
            android:id="@+id/notify1"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:src="@drawable/bell_icon"
            android:layout_gravity="right"
            android:padding="15dp"
            />

    </androidx.appcompat.widget.Toolbar>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

        <!-- User Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:gravity="center"
            android:padding="5dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                tools:ignore="UselessParent">

            <TextView
                android:id="@+id/userrname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/tett"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/lexend"/>

                <ProgressBar
                    android:id="@+id/pb_welcomsg"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:indeterminateTint="@color/tett"
                    />


            </FrameLayout>

        </RelativeLayout>

        <!-- Scrollable Content -->



                <View
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/white"
                    />


                <!-- Video Section -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@color/white"
                    >

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/rounded_video_mask">

                        <TextureView
                            android:id="@+id/textureView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                        <ProgressBar
                            android:id="@+id/pb_demovideo"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:visibility="visible"
                            android:indeterminateTint="@color/tett"
                            />


                    </FrameLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:layout_marginLeft="20dp"
                        android:text="Expert - Crafted Routines"
                        android:textColor="@color/tett"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/time_management_cuate"
                        tools:ignore="ContentDescription,ImageContrastCheck" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Get the best results with expert-designed schedules, with AI notifications. Set your's now and stay ahead!"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_gravity="center"
                        android:textColor="#545454"
                        tools:ignore="HardcodedText" />


                    <TextView
                            android:id="@+id/setschedue"
                            android:layout_width="350dp"
                            android:layout_height="35dp"
                            android:text="Set new schedule"
                            android:background="@drawable/cardviewborder"
                            android:textColor="@color/tett"
                            android:textSize="14sp"
                            android:layout_gravity="center"
                            android:backgroundTint="#CFF3FF"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="@font/lexend" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:layout_marginLeft="20dp"
                        android:text="Discover App Features"
                        android:textColor="@color/tett"
                        android:textSize="16sp"
                        tools:ignore="HardcodedText" />

                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:scrollbarSize="3dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="340dp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:padding="10dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#00FFFFFF"
                            android:layout_gravity="center"
                            app:cardCornerRadius="30dp"
                            android:layout_marginLeft="20dp"
                            >

                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/cardviewborder"
                            android:padding="20dp">

                            <ImageButton
                                android:id="@+id/pulse_chat"
                                android:layout_width="190dp"
                                android:layout_height="230dp"
                                android:backgroundTint="#00FFFFFF"
                                android:src="@drawable/chat_bot_pana"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pulse Chat"
                                android:fontFamily="@font/lexend"
                                android:textColor="@color/tett"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>

                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="#00FFFFFF"
                            app:cardCornerRadius="30dp"
                            android:layout_marginLeft="40dp"
                            >

                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/cardviewborder"
                            android:padding="20dp">

                            <ImageButton
                                android:id="@+id/BMI_calcy"
                                android:layout_width="190dp"
                                android:backgroundTint="#00FFFFFF"
                                android:layout_height="230dp"
                                android:src="@drawable/diet_amico"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BMI calcy"
                                android:fontFamily="@font/lexend"
                                android:textColor="@color/tett"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:backgroundTint="#00FFFFFF"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:cardCornerRadius="30dp"
                            android:layout_marginLeft="40dp"
                            >

                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@drawable/cardviewborder"
                            android:gravity="center"
                            android:padding="20dp">

                            <ImageButton
                                android:id="@+id/step_counting"
                                android:layout_width="190dp"
                                android:backgroundTint="#00FFFFFF"
                                android:layout_height="230dp"
                                android:src="@drawable/fitness_tracker_pana"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Step counter"
                                android:fontFamily="@font/lexend"
                                android:textColor="@color/tett"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                />
                        </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <!-- Home Workout -->

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:backgroundTint="#00FFFFFF"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:cardCornerRadius="30dp"
                            android:layout_marginLeft="40dp"
                            >

                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@drawable/cardviewborder"
                            android:gravity="center"
                            android:padding="20dp">

                            <ImageButton
                                android:id="@+id/home_work"
                                android:layout_width="260dp"
                                android:layout_height="230dp"
                                android:backgroundTint="#00FFFFFF"
                                android:src="@drawable/pilates_amico"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lexend"
                                android:textSize="14sp"
                                android:text="Home workout"
                                android:textStyle="bold"
                                android:textColor="@color/tett"
                                tools:ignore="HardcodedText,TouchTargetSizeCheck" />
                        </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <!-- Gym Workout -->

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#00FFFFFF"
                            android:layout_gravity="center"
                            app:cardCornerRadius="30dp"
                            android:layout_marginLeft="40dp"
                            >

                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:background="@drawable/cardviewborder"
                            android:padding="20dp">

                            <ImageButton
                                android:id="@+id/gym_work"
                                android:layout_width="match_parent"
                                android:layout_height="230dp"
                                android:backgroundTint="#00FFFFFF"
                                android:src="@drawable/gym_amico"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lexend"
                                android:text="Gym workout"
                                android:textColor="@color/tett"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText,TouchTargetSizeCheck" />
                        </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <!-- Yoga Asanas -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="#00FFFFFF"
                            app:cardCornerRadius="30dp"
                            android:layout_marginLeft="40dp"
                            >

                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@drawable/cardviewborder"
                            android:gravity="center"
                            android:padding="20dp">

                            <ImageButton
                                android:id="@+id/yoga_asanas"
                                android:layout_width="match_parent"
                                android:layout_height="230dp"
                                android:backgroundTint="#00FFFFFF"
                                android:src="@drawable/meditation_amico"
                                tools:ignore="SpeakableTextPresentCheck" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/lexend"
                                android:text="Yoga Asanas"
                                android:textColor="@color/tett"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                tools:ignore="HardcodedText,TouchTargetSizeCheck" />
                        </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#00FFFFFF"
                            android:layout_gravity="center"
                            app:cardCornerRadius="30dp"
                            android:layout_marginLeft="20dp"
                            >

                            <LinearLayout
                                android:layout_width="300dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@drawable/cardviewborder"
                                android:padding="20dp">

                                <ImageButton
                                    android:id="@+id/dietkaro"
                                    android:layout_width="190dp"
                                    android:layout_height="230dp"
                                    android:backgroundTint="#00FFFFFF"
                                    android:src="@drawable/healthy_options_rafiki"
                                    tools:ignore="SpeakableTextPresentCheck" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Diet Plans"
                                    android:fontFamily="@font/lexend"
                                    android:textColor="@color/tett"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    tools:ignore="HardcodedText" />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </HorizontalScrollView>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:layout_marginLeft="20dp"
                        android:text="Give us feedback"
                        android:textColor="@color/tett"
                        android:textSize="16sp" />

                </LinearLayout>



                <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:background="@color/white"
                            android:layout_gravity="center"
                            android:gravity="center"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Share your experience !"
                                android:textSize="12sp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="34dp"
                                android:layout_marginLeft="58dp"
                                android:textStyle="bold"
                                android:textColor="#545454"
                                tools:ignore="HardcodedText" />
                            <TextView
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="Getting stronger and feeling better? Flex your thoughts and drop a review!"
                                android:textSize="10sp"
                                android:gravity="center"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginRight="157dp"
                                android:layout_marginBottom="75dp"
                                android:layout_marginTop="50dp"
                                android:layout_marginLeft="16dp"
                                android:textColor="#545454"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/writenow"
                                android:layout_width="40dp"
                                android:layout_height="wrap_content"
                                android:text="Write Now !"
                                android:textSize="14sp"
                                android:gravity="center"
                                android:background="@drawable/cardviewborder"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:backgroundTint="#CFF3FF"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginRight="170dp"
                                android:layout_marginBottom="25dp"
                                android:layout_marginTop="97dp"
                                android:layout_marginLeft="30dp"
                                android:textColor="@color/tett"
                                tools:ignore="HardcodedText" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/_4996012_9019834"
                                android:layout_marginLeft="230dp"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginTop="19dp"
                                android:layout_marginBottom="19dp"
                                tools:ignore="ContentDescription" />

                        </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="left"
                        android:layout_marginLeft="20dp"
                        android:text="Connect with us on"
                        android:textColor="@color/tett"
                        android:textSize="16sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    android:background="@color/white"
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        >

                        <ImageButton
                            android:id="@+id/instagrams"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="#00FFFFFF"
                            android:src="@drawable/ig_instagram_icon"
                            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/lexend"
                            android:gravity="center"
                            android:text="Instagram"
                            android:textColor="#545454"
                            android:textSize="10dp"
                            tools:ignore="TextSizeCheck" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        >

                        <ImageButton
                            android:id="@+id/linkedins"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:backgroundTint="#00FFFFFF"
                            android:src="@drawable/linkedin_app_icon"
                            tools:ignore="ContentDescription,SpeakableTextPresentCheck" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/lexend"
                            android:gravity="center"
                            android:text="Linked in"
                            android:textColor="#545454"
                            android:textSize="10dp"
                            tools:ignore="TextSizeCheck" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:background="@color/white"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    />

            </LinearLayout>
        </ScrollView>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:background="@color/white"
        app:itemIconTint="@color/tett"
        app:itemTextColor="@color/tett"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/drawer_menu"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header" />

</androidx.drawerlayout.widget.DrawerLayout>
