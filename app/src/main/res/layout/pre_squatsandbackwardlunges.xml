<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#EBEBEB"
    tools:context=".pre_squatsandbackwardlunges_j">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/topToolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="0dp"
        android:background="@color/tett"
        android:gravity="center"
        app:navigationIcon="@drawable/chevron_direction_left_white_icon"
        app:title="3. Squats + Backward Lunges"
        app:titleTextAppearance="@style/Base.Theme.MartyApp"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topToolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="-50dp"
            android:gravity="center"
            android:orientation="vertical"
            >

            <View
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="10dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Preview"
                    android:textColor="@color/tett"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/white"
                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_video_mask">

                    <TextureView
                        android:id="@+id/textureView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ProgressBar
                        android:id="@+id/pb_1"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:visibility="visible"
                        android:indeterminateTint="@color/tett"
                        />


                </FrameLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/white"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Let's start performing exercise"
                    android:textSize="13sp"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_gravity="center"
                    android:textColor="#545454"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/gotosteps"
                    android:layout_width="140dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="15dp"
                    android:text="Start Exercise"
                    android:background="@drawable/cardviewborder"
                    android:textColor="@color/tett"
                    android:textSize="14sp"
                    android:layout_gravity="center"
                    android:backgroundTint="#CFF3FF"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/lexend" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="30dp"
                />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>


